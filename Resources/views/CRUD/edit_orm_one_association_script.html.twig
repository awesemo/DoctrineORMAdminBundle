{# This code manage the many-to-[one|many] association field popup #}

{% autoescape false %}
<!-- edit one association script-->
<script>
    {% spaceless %}
    var otom_{{ id }} = new rzadmin_one_assoc({
        id: '{{ id }}',
        admin: rzadmin,
        field_dialog: null,
        field_widget: 'field_widget_{{ id }}',
        field_container: 'field_container_{{ id }}',
        url_sonata_admin_append_form_element: '{{ url('sonata_admin_append_form_element', {
                                                        'code':      sonata_admin.admin.root.code,
                                                        'elementId': id,
                                                        'objectId':  sonata_admin.admin.root.id(sonata_admin.admin.root.subject),
                                                        'uniqid':    sonata_admin.admin.root.uniqid
                                                    } + sonata_admin.field_description.getOption('link_parameters', {})) }}'
    });
    {% endspaceless %}
</script>
<!-- / edit one association script-->
{% endautoescape %}
